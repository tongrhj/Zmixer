$deep-purple= #28143f
$audio-colour= #EF49B7
$bright-blue= #55ccff

.Player
  position fixed
  bottom 0
  left 8px
  z-index 1
  height 120px
  background-color black
  width calc(100vw - 16px)
  display flex
  align-items center
  justify-content space-between

.Player button.btn-play
  border none
  color $audio-colour
  font-size 40px
  border-radius 50%
  width 80px
  height 80px
  padding-left 16px
  background-color transparent


.Player h3
  margin 0
  color $audio-colour
  text-overflow clip
  max-width 30vw
  flex 2 2 20em

.Player button.countdown-timer
  background transparent
  border-radius 10px
  border 1px solid white
  color white
  padding 1rem
  margin-right 1rem
  

