.Mixing-panel
  transition all 400ms cubic-bezier(0.175, 0.885, 0.335, 1.05)
  z-index 9

.Mixing-panel-hidden
  transform translate3d(-80%, 0, 0) scale3d(0.65, 0.65, 1)
  opacity 0.9

.Mixing-header
  position absolute
  top 0
  width 100vw

  h1
    float right
    margin 0
    padding 0.8rem 1rem
    font-weight 300
    font-size 1em

